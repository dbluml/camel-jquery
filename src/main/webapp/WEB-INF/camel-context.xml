<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
       http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
       http://camel.apache.org/schema/spring http://camel.apache.org/schema/spring/camel-spring.xsd">
       
        <bean id="dataSet" class="org.apache.camel.component.dataset.SimpleDataSet">
                <property name="defaultBody" value=""/>
                <property name="size" value="1"/>
        </bean>
    
	<camelContext id="camelContext" xmlns="http://camel.apache.org/schema/spring">
		<jmxAgent id="agent" disabled="true" />
	     
		<intercept>
			<to uri="log:interceptor?showHeaders=true"/>
		</intercept>	
		
		<!-- hello -->
		<route>
			<from uri="servlet:///"/>
			<setBody><simple>Hello Camel</simple></setBody>			
		</route>
		
		<!-- process data -->
		<route>
			<from uri="gtask://default"/>
			<to uri="direct:query"/>
		</route>
		<route>
			<from uri="direct:query"/>
			<to uri="direct:clear"/>
			<setBody><constant>ghttp://www.ratp.fr/horaires/fr/ratp/bus/prochains_passages/PP/B295/295_6356_6380/A</constant></setBody>
			<to uri="direct:fetchURL"/>
			<setBody><constant>ghttp://www.ratp.fr/horaires/fr/ratp/bus/prochains_passages/PP/B194/194_6079_6126/A</constant></setBody>
			<to uri="direct:fetchURL"/>
			<setBody><constant>ghttp://www.ratp.fr/horaires/fr/ratp/bus/prochains_passages/PP/B295/295_6356_6380/R</constant></setBody>
			<to uri="direct:fetchURL"/>
			<setBody><constant>ghttp://www.ratp.fr/horaires/fr/ratp/bus/prochains_passages/PP/B194/194_6079_6126/R</constant></setBody>
			<to uri="direct:fetchURL"/>
			<setBody><constant>ghttp://www.ratp.fr/horaires/fr/ratp/bus/prochains_passages/PP/B162/162_57_93/A</constant></setBody>			
			<to uri="direct:fetchURL"/>
			<setBody><constant>ghttp://www.ratp.fr/horaires/fr/ratp/bus/prochains_passages/PP/B162/162_57_93/R</constant></setBody>			
			<to uri="direct:fetchURL"/>
			<setBody><constant>ghttp://www.ratp.fr/horaires/fr/ratp/bus/prochains_passages/PP/B394/394_6142_6164/A</constant></setBody>
			<to uri="direct:fetchURL"/>
			<setBody><constant>ghttp://www.ratp.fr/horaires/fr/ratp/bus/prochains_passages/PP/B394/394_6142_6164/R</constant></setBody>
			<to uri="direct:fetchURL"/>
			<setBody><constant>ghttp://www.ratp.fr/horaires/fr/ratp/rer/prochains_passages/RB/Fontenay+aux+Roses/A</constant></setBody>
			<to uri="direct:fetchURL"/>
			<setBody><constant>ghttp://www.ratp.fr/horaires/fr/ratp/rer/prochains_passages/RB/Fontenay+aux+Roses/R</constant></setBody>
			<to uri="direct:fetchURL"/>
		</route>
		<route>
			<from uri="direct:clear"/>
			<setBody><constant></constant></setBody>			
			<bean ref="dataSet" method="setDefaultBody"/>
		</route>
		<route>
			<from uri="direct:fetchURL"/>
			<setHeader headerName="target"><simple>${body}</simple></setHeader>
			<recipientList>
				<header>target</header>
			</recipientList>				
			<to uri="direct:extractData"/>
		</route>
		<route>
			<from uri="direct:extractData"/>
			<unmarshal>
				<tidyMarkup/>
			</unmarshal>
			<setBody>
				<xquery  type="java.lang.String">
					for $item in (//*:fieldset//*:div[@class="line_details"] | //*:fieldset//*:tr)
					return if ($item/*:span)
						then concat("&lt;tr style='background-color:lightblue'&gt;&lt;td&gt;",$item/*:span/text(),"&lt;/td&gt;&lt;td&gt;",$item/*:img[last()]/@alt,"&lt;/td&gt;&lt;/tr&gt;")
						else concat("&lt;tr style='background-color: silver'&gt;&lt;td&gt;",$item/*:td[last()-1]/text(),"&lt;/td&gt;&lt;td&gt;",$item/*:td[last()]/text(),"&lt;/td&gt;&lt;/tr&gt;")
				</xquery>
			</setBody>
			<to uri="direct:concatData"/>
		</route>
		<route>
			<from uri="direct:concatData"/>
			<setBody><simple>${bean:dataSet?method=getDefaultBody}${body}</simple></setBody>
			<bean ref="dataSet" method="setDefaultBody"/>
		</route>
		<route>
			<from uri="direct:getInfo"/>
			<setBody><simple>${bean:dataSet?method=getDefaultBody}</simple></setBody>			
			<setBody><simple>&lt;html&gt;&lt;body&gt;&lt;table&gt;${body}&lt;/table&gt;&lt;/body&gt;&lt;/html&gt;</simple></setBody>			
		</route>
		
		<!-- servlet endpoint -->
		<route>
			<from uri="servlet:///get"/>
			<to uri="direct:getInfo"/>						
		</route>
		<route>
			<from uri="servlet:///post"/>
			<to uri="direct:getInfo"/>
			<setHeader headerName="GMailBindingGmailTo"><simple>to=${header.to}&amp;subject=${header.subject}</simple></setHeader>			
			<to uri="gmail://michel.promonet.1@gmail.com"/>						
		</route>
		<route>
			<from uri="servlet:///smtp2web?matchOnUriPrefix=true"/>
			<to uri="gmail://michel.promonet.1@gmail.com?to=camelforwarder123@gmail.com&amp;subject=forward"/>						
		</route>
		<route>
			<from uri="servlet:///getStationList"/>
			<setHeader headerName="CamelHttpMethod"><constant>POST</constant></setHeader>			
			<setBody><simple>busLigneServiceForm%5Bline%5D=${header.line}&amp;busLigneServiceForm%5Bservice%5D=PP</simple></setBody>			
			<to uri="ghttp://www.ratp.fr/horaires/fr/ratp/bus"/>
			<unmarshal>
				<tidyMarkup/>
			</unmarshal>
			<setBody>
				<xquery  type="java.lang.String">
					//*:fieldset//*:option/concat("&lt;item key=&amp;#34;" ,@value, "&amp;#34; value=&amp;#34;" ,text(), "&amp;#34; /&gt;")
				</xquery>
			</setBody>
			<setBody><simple>&lt;root&gt;${body}&lt;/root&gt;</simple></setBody>			
			<setBody>
				<xquery  type="java.lang.String">
					for $item in //item 
					return concat("&lt;tr style='background-color: silver'&gt;&lt;td&gt;",$item/@key,"&lt;/td&gt;&lt;td&gt;",$item/@value,"&lt;/td&gt;&lt;/tr&gt;")
				</xquery>
			</setBody>
			<setBody><simple>&lt;html&gt;&lt;body&gt;&lt;table&gt;${body}&lt;/table&gt;&lt;/body&gt;&lt;/html&gt;</simple></setBody>			
		</route>				
		<route>
			<from uri="servlet:///getNextTime"/>
			<to uri="direct:clear"/>
			<setHeader headerName="CamelHttpMethod"><constant>POST</constant></setHeader>			
			<setBody><simple>busLigneServiceForm%5Bline%5D=${header.line}&amp;busLigneServiceForm%5Bservice%5D=PP</simple></setBody>			
			<to uri="ghttp://www.ratp.fr/horaires/fr/ratp/bus"/>
			<unmarshal>
				<tidyMarkup/>
			</unmarshal>
			<setBody>
				<xquery  type="java.lang.String">
					//*:fieldset//*:option/concat("&lt;item key=&amp;#34;" ,@value, "&amp;#34; value=&amp;#34;" ,text(), "&amp;#34; /&gt;")
				</xquery>
			</setBody>
			<setBody><simple>&lt;root&gt;${body}&lt;/root&gt;</simple></setBody>			
			<split>
				<xpath>//item/@key</xpath>
				<setBody><simple>ghttp://www.ratp.fr/horaires/fr/ratp/bus/prochains_passages/PP/${header.line}/${body}/A</simple></setBody>			
				<to uri="direct:fetchURL"/>
			</split>
			<setBody><simple>${bean:dataSet?method=getDefaultBody}</simple></setBody>			
			<setBody><simple>&lt;html&gt;&lt;body&gt;&lt;table&gt;${body}&lt;/table&gt;&lt;/body&gt;&lt;/html&gt;</simple></setBody>			
		</route>				
	</camelContext>
</beans>			